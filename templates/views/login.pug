extends ../layouts/default

block intro
	.container
		h1 LogIn
		
block content
	.container
		if enquirySubmitted
			h3 Thanks for getting in touch.
		else
			.row: .col-sm-8.col-md-6
				form(method='post')
					input(type='hidden', name='action', value='login')
					.form-group(class=validationErrors.email ? 'has-error' : null)
						label Email
						input(type='email', name='email', value=formData.email).form-control
					.form-group
						label Password
						input(type='text', name='password', value=formData.password).form-control
					.form-actions
						button(type='submit').btn.btn-primary Sing in
